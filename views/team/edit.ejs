<div class="col-xs-12" >
    <% if(flash && flash.err){ %>
        <ul class="alert alert-warning">
            <% Object.keys(flash.err).forEach(function(error) { %>
                <li>
                    <%- JSON.stringify(flash.err[error]) %>
                </li>
            <% }) %>
        </ul>
    <% } %>
</div>
<div class="col-md-3"></div>
<div class="col-md-6 col-xs-12">
    <form action="/team/update/<%= team.id %>" method="POST">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Edit Team</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label for="schoolName">School Name</label>
                    <input type="text" class="form-control" placeholder="School Name" name="schoolName" value="<%= team.schoolName %>">
                </div>
                <div class="form-group">
                    <label for="teamLetter">Team Letter</label>
                    <input type="text" class="form-control" placeholder="Team Letter" name="teamLetter" value="<%= (team.teamLetter) ? team.teamLetter : '' %>">
                </div>
                <div class="form-group">
                    <label for="membershipNumber">Membership Number</label>
                    <input type="text" class="form-control" placeholder="Membership Number" name="membershipNumber" value="<%= team.membershipNumber %>">
                </div>
                <div class="form-group">
                    <label for="problem">Problem</label>
                    <select name="problem" class="form-control">
                    <option value="P" <%= (team.problem == 'P') ? 'selected': '' %> >Primary</option>
                    <option value="1" <%= (team.problem == '1') ? 'selected': '' %> >Problem 1</option>
                    <option value="2" <%= (team.problem == '2') ? 'selected': '' %> >Problem 2</option>
                    <option value="3" <%= (team.problem == '3') ? 'selected': '' %> >Problem 3</option>
                    <option value="4" <%= (team.problem == '4') ? 'selected': '' %> >Problem 4</option>
                    <option value="5" <%= (team.problem == '5') ? 'selected': '' %> >Problem 5</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="division">Division</label>
                    <select name="division" class="form-control">
                    <option value="1" <%= (team.division == '1') ? 'selected': '' %> >Division I</option>
                    <option value="2" <%= (team.division == '2') ? 'selected': '' %> >Division II</option>
                    <option value="3" <%= (team.division == '3') ? 'selected': '' %> >Division III</option>
                    <option value="4" <%= (team.division == '4') ? 'selected': '' %> >Division IV</option>
                    <option value="P" <%= (team.division == 'P') ? 'selected': '' %> >Primary</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="venue">Venue</label>
                    <input type="text" class="form-control" placeholder="Venue" name="venue"  value="<%= team.venue %>">
                </div>
                <div class="form-group">
                    <label for="longtermTime">Longterm Time</label>
                    <div class='input-group date' id='longtermTimePicker'>
                        <input type='text' class="form-control" name="longtermTime" placeholder="Longterm Time" value="<%= Utils.getDateTime(team.longtermTime) %>"/>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="sponTime">Spontaneous Time</label>
                    <div class='input-group date' id='sponTimePicker'>
                        <input type='text' class="form-control" name="sponTime" placeholder="Spontaneous Time" value="<%= Utils.getDateTime(team.sponTime) %>"/>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
                <input type="submit" class="btn btn-success btn-primary btn-block" value="Save Team" />
            </div>
        </div>
    </form>
</div>

<% block('localScripts', 
    '<script src="/js/moment.min.js"></script> ' +
    '<script src="/js/bootstrap-datetimepicker.min.js"></script> ' +
    '<script src="/js/team/new.js"></script>') %>